{
    "name": "PC Addons for Android",
    "description": "Always show the desktop version of AMO in Firefox for Android.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "128": "icon.png"
    },
    "background":{
        "scripts":["background.js"],
        "type": "module"
    },
    "permissions": ["tabs"],
    "browser_specific_settings": {
        "gecko": {
            "id": "PCAddons@FoxRefire",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    }
}
